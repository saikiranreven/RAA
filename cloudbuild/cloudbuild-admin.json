{
  "steps": [
    {
      "name": "gcr.io/cloud-builders/gcloud",
      "args": ["app", "deploy", "Admin/app.yaml", "--quiet"]
    },
    {
      "name": "gcr.io/cloud-builders/gcloud",
      "dir": "cloud_functions",
      "args": [
        "functions", "deploy", "update_inventory_on_order",
        "--runtime", "python310",
        "--trigger-event", "providers/cloud.firestore/eventTypes/document.create",
        "--trigger-resource", "projects/reliable-sight-400315/databases/(default)/documents/orders/{orderId}",
        "--entry-point", "update_inventory_on_order",
        "--region", "us-central1"
      ]
    }
  ],
  "options": {
    "logging": "CLOUD_LOGGING_ONLY"
  }
}